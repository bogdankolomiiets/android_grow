<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_RL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <EditText
        android:id="@+id/ET_Field1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:hint="@string/field1"
        android:inputType="numberSigned|numberDecimal"
        android:paddingTop="8dp" />

    <EditText
        android:id="@+id/ET_Field2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ET_Field1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/field2"
        android:inputType="numberSigned|numberDecimal" />

    <RadioGroup
        android:id="@+id/operationGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ET_Field2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <RadioButton
            android:id="@+id/radio_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_select"
            android:onClick="setOperationSing"
            android:padding="8dp"
            android:text="@string/radioOperationPlus" />

        <RadioButton
            android:id="@+id/radio_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_select"
            android:onClick="setOperationSing"
            android:padding="8dp"
            android:text="@string/radioOperationMinus" />

        <RadioButton
            android:id="@+id/radio_multiple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_select"
            android:onClick="setOperationSing"
            android:padding="8dp"
            android:text="@string/radioOperationMultiple" />

        <RadioButton
            android:id="@+id/radio_divide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_select"
            android:onClick="setOperationSing"
            android:padding="8dp"
            android:text="@string/radioOperationDivide" />
    </RadioGroup>

    <CheckBox
        android:id="@+id/float_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/operationGroup"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:checked="true"
        android:text="@string/floatCheckBoxText" />

    <CheckBox
        android:id="@+id/signed_checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/float_checkBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:checked="true"
        android:text="@string/signedCheckBoxText" />

    <TextView
        android:id="@+id/tv_Result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signed_checkBox"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:text="@string/tv_ResultText"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Result"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:text="@string/btnCalculateText" />
</RelativeLayout>