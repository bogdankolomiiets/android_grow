<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="newTaskStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="storeTypeRadioGroupStyle">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="drawerHeaderTextStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="recyclerViewItemHamburger">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="recyclerViewItemTextSize">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="fabStyle">
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>
</resources>
